@model IEnumerable<Common.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Products</h2>

<p>
    
</p>
<table>
    <tr>
        <th></th>
        <th>
            Product Name
        </th>
        <th>
            Product Description
        </th>
        <th>
            Price
        </th>
        <th>
            Image
        </th>
        <th>
            Sold By
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
        </td>
        <td>
            @item.Product_Name
        </td>
        <td>
            @item.C_Product_Description
        </td>
        <td>
            @String.Format("{0:F}", item.Price)
        </td>
        <td>
           <img src="@Url.Content(item.Image)" alt="" heigth="100px" width="100px"/>
        </td>
        <td>
            @item.UserName
        </td>
    </tr>
}

</table>

