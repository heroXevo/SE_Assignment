@model IEnumerable<Common.User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            UserName
        </th>
        <th>
            Password
        </th>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Age
        </th>
        <th>
            Address
        </th>
        <th>
            TownID
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { UserName  = item.UserName }) |
            @Html.ActionLink("List User Roles", "UserRoleList", "Role", new { userName = item.UserName }, null) |
            @Html.ActionLink("Delete", "DeleteUser", new { UserName = item.UserName })
        </td>

        
        <td>
            @item.UserName
        </td>
        <td>
            @item.Password
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Surname
        </td>
        <td>
            @item.Age
        </td>
        <td>
            @item.Address
        </td>
        <td>
            @item.TownID
        </td>
    </tr>
}

</table>

